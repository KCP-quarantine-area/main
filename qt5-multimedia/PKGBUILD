
pkgname=qt5-multimedia
pkgver=5.3.0RC
subver=5.3.0-RC
_pkgver=5.3
pkgrel=1
pkgdesc=('A cross-platform application and UI framework, QtMultimedia files')
arch=('x86_64')
url='http://qt.nokia.com/'
license=('GPL3' 'LGPL' 'FDL' 'custom')
depends=('qt5-declarative' 'openal' 'libxslt' 'libxcomposite' 'gst-plugins-base'
         'gst-plugins-good' 'pulseaudio')
options=('!libtool')
groups=('qt5')
_pkgfqn="qtmultimedia-opensource-src-${subver}"
source=("http://download.qt-project.org/development_releases/qt/${_pkgver}/5.3.0-rc/submodules/$_pkgfqn.tar.xz")
md5sums=('068d315e171fe8760d5579da113ac9ca')

build() {
    cd $srcdir/$_pkgfqn

    /usr/lib/qt5/bin/qmake
    make
}

package() {
    cd $srcdir/$_pkgfqn
    make INSTALL_ROOT=$pkgdir install
    
    mkdir -p ${pkgdir}/usr/bin
    for i in $(ls ${pkgdir}/usr/lib/qt5/bin); do
        ln -s /usr/lib/qt5/bin/${i} ${pkgdir}/usr/bin/${i}-qt5
    done
    
    install -D -m644 LGPL_EXCEPTION.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/LGPL_EXCEPTION.txt
}

