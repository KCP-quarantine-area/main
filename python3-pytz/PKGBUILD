
pkgname=python3-pytz
pkgver=2016.4
pkgrel=1
arch=('x86_64')
pkgdesc="Cross platform time zone library for Python"
url="http://pypi.python.org/pypi/pytz"
license=("MIT")
depends=('python3')
source=("https://pypi.python.org/packages/f4/7d/7c0c85e9c64a75dde11bc9d3e1adc4e09a42ce7cdb873baffa1598118709/pytz-${pkgver}.tar.bz2")
md5sums=('e56283d61935963157aebc5135206a47')

check() {
    cd pytz-${pkgver}/pytz/tests

    python3 test_tzinfo.py
}

package() {
    cd pytz-${pkgver}

    python3 setup.py install --root=${pkgdir}/

    install -D LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
