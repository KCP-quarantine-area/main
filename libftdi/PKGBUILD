
pkgname=libftdi
pkgver=1.0
pkgrel=1
pkgdesc="A library to talk to FTDI chips"
arch=('x86_64')
url="http://www.intra2net.com/en/developer/libftdi/download.php"
license=("GPL2")
depends=('libusbx' 'gcc-libs')
makedepends=('boost' 'cmake')
source=("http://www.intra2net.com/en/developer/libftdi/download/${pkgname}1-$pkgver.tar.bz2")
md5sums=('e02dd77ee10b82b5edfbb8c199185bbf')
options=('!libtool')

build() {
  cd $srcdir/${pkgname}1-$pkgver
  sed -i 's|LIB_SUFFIX 64|LIB_SUFFIX ""|' CMakeLists.txt
  
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_SKIP_BUILD_RPATH=ON -DCMAKE_BUILD_TYPE=Release
  make 
}

package() {
  cd $srcdir/${pkgname}1-$pkgver/build
  
  make DESTDIR=$pkgdir install
}
