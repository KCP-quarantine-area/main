
pkgname=rdesktop
pkgver=1.8.2
pkgrel=1
pkgdesc="Open source client for Windows Remote Desktop Services"
arch=('x86_64')
url="http://www.rdesktop.org/"
license=('GPL')
depends=('libx11' 'openssl' 'libao' 'libsamplerate' 'xorg-server-utils' 'pcsclite')
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz"
	'rdesktop-send_physical_buttons.diff')
md5sums=('d05ee35b33cc909c9a48368ae5fc8d16'
         'cbfb12729e7f28e497afb883cc42022b')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -i ${srcdir}/rdesktop-send_physical_buttons.diff

  ./configure --prefix=/usr --enable-smartcard --with-ipv6
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
