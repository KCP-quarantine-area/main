
pkgname=enca
pkgver=1.17
pkgrel=1
pkgdesc="Detects character set and encoding of text files and can also convert them to other encodings"
arch=('x86_64')
url="http://cihar.com/software/enca/"
options=('!libtool')
license=('GPL')
depends=('recode' 'bash')
source=("http://dl.cihar.com/${pkgname}/${pkgname}-${pkgver}.tar.xz")
md5sums=('431f3e996b2f7354124c4e7bd24e03bb')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
              --libexecdir=/usr/lib \
              --mandir=/usr/share/man \
              --with-librecode=/usr \
              --enable-external
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR="${pkgdir}" install
}
