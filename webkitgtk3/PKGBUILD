
pkgname=webkitgtk3
_pkgname=webkitgtk
pkgver=2.4.4
pkgrel=1
pkgdesc="GNOME platform port of the WebKit rendering engine, offering WebKitâ€™s full functionality"
arch=('x86_64')
url="http://webkitgtk.org/"
license=('custom')
depends=('sqlite' 'libsoup' 'libsecret' 'enchant' 'libgl' 'gst-plugins-base' 'gst-plugins-good'
         'gtk3' 'libwebp' 'libxslt' 'libxt' 'harfbuzz')
makedepends=('gperf' 'gobject-introspection' 'python3' 'mesa' 'ruby' 'gtk2')
options=('!emptydirs')
source=("http://webkitgtk.org/releases/$_pkgname-${pkgver}.tar.xz")
md5sums=('79edd28d32172abc17a8861622cc274f')

build() {
   cd "$_pkgname-$pkgver"
  
   ./configure --prefix=/usr \
       --prefix=/usr \
       --enable-introspection \
       --disable-geolocation \
       --disable-gtk-doc
   
   sed -i 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
   make all stamp-po
}

package() {
   cd "$_pkgname-$pkgver"
   make -j1 DESTDIR="$pkgdir" install

   install -Dm644 $srcdir/$_pkgname-$pkgver/Source/WebKit/LICENSE "$pkgdir/usr/share/licenses/webkitgtk/LICENSE"
   
   rm -r "$pkgdir/usr/share/gtk-doc" 
}