
pkgname=doxygen
pkgver=1.8.7
pkgrel=1
pkgdesc="A documentation system for C++, C, Java, IDL and PHP"
license=('GPL')
arch=('x86_64')
url="http://www.doxygen.org/"
depends=('gcc-libs' 'qt')
makedepends=('flex' 'texlive-core' 'ghostscript' 'texlive-latexextra' 'python2')
optdepends=('graphviz: for caller/callee graph generation'
            'qt: for doxywizard')
source=("ftp://ftp.stack.nl/pub/users/dimitri/${pkgname}-${pkgver}.src.tar.gz")
md5sums=('ff0529df773301f63db82c25137b7fd8')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  QTDIR=/usr ./configure --prefix /usr --with-doxywizard
  make 
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  make INSTALL=${pkgdir}/usr MAN1DIR=share/man/man1 install
}