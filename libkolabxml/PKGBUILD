
pkgname=libkolabxml
pkgver=1.1.1
pkgrel=2
pkgdesc="Kolab XML Format Schema Definitions Library"
url='http://git.kolab.org/libkolabxml/'
arch=('x86_64')
license=('GPL')
depends=('xerces-c' 'boost-libs') # 'qt5-base' 'kdelibs4support')
makedepends=('extra-cmake-modules' 'boost' 'xsd' 'swig')
source=("http://mirror.kolabsys.com/pub/releases/${pkgname}-${pkgver}.tar.gz")
md5sums=('9cb1cb2ffc3496af3df9cba2bf56ac0c')

build() {
  mkdir build
  cd build

  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTS=OFF
    #-DQT5_BUILD=TRUE
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}
