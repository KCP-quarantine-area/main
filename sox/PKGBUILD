
pkgname=sox
pkgver=14.4.2
pkgrel=1
pkgdesc="The Swiss Army knife of sound processing tools"
arch=('x86_64')
url="http://sox.sourceforge.net/"
license=('GPL' 'LGPL')
depends=('libltdl' 'file' 'libsndfile' 'libpng' 'lame' 'opencore-amr' 'gsm' 'pulseaudio')
makedepends=('libao' 'libmad' 'libid3tag' 'wavpack')
optdepends=('libao: for ao plugin'
            'libmad: for mp3 plugin'
            'libid3tag: for mp3 plugin'
            'wavpack: for wavpack plugin')
options=('!libtool')
source=("http://downloads.sourceforge.net/sox/${pkgname}-${pkgver}.tar.bz2")
md5sums=('ba804bb1ce5c71dd484a102a5b27d0dd')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  sed -i 's|man1/sox.1 soxeffect.7|man1/sox.1.gz soxeffect.7.gz|' Makefile.am
  sed -i 's|1.14|1.15|' configure
  sed -i 's|am__api_version='1.14'|am__api_version='1.15'|' aclocal.m4
  sed -i 's|1.14.1|1.15|' aclocal.m4
  
  
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --with-dyn-default \
    --with-distro="KaOS" 
  make 
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  make DESTDIR="${pkgdir}" install
}
