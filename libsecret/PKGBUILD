
pkgname=libsecret
pkgver=0.18.3
_pkgver=0.18
pkgrel=1
pkgdesc='Library for storing and retrieving passwords and other secrets.'
arch=('x86_64')
license=('LGPL')
url="https://wiki.gnome.org/Projects/Libsecret"
depends=('glib2' 'libgcrypt')
makedepends=('intltool' 'docbook-xsl' 'gobject-introspection' 'vala')
source=("http://ftp.gnome.org/pub/gnome/sources/libsecret/$_pkgver/$pkgname-$pkgver.tar.xz")
md5sums=('a21605644a64883ab685aec50d63253e')

build() {
  cd "$pkgname-$pkgver"
  
  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --disable-static
  make
}

package() {
  cd "$pkgname-$pkgver" 
  
  make DESTDIR="$pkgdir" install
}
