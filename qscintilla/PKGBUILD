# build twice on updates, to get correct version for designer plugin
# todo: no more split package
pkgname=qscintilla
pkgver=2.9.2
pkgrel=1
license=('GPL')
arch=('x86_64')
url="http://www.riverbankcomputing.co.uk/software/qscintilla/intro"
pkgdesc="A port to Qt of Neil Hodgson's Scintilla C++ editor class"
depends=('qt')
makedepends=('qscintilla' 'chrpath')
source=("http://downloads.sourceforge.net/pyqt/QScintilla_gpl-${pkgver}.tar.gz")
md5sums=('db260651a5e086cc4eee6417172e27e8')

build() {
    cd QScintilla_gpl-${pkgver}

    cd Qt4Qt5
    qmake qscintilla.pro
    make
    
    cd ../designer-Qt4Qt5
    qmake designer.pro 
    make
}

package() {
    cd QScintilla_gpl-${pkgver}/Qt4Qt5
    make DESTDIR=${pkgdir} INSTALL_ROOT=${pkgdir} install

    cd ../../QScintilla_gpl-${pkgver}/designer-Qt4Qt5
    make DESTDIR=${pkgdir} INSTALL_ROOT=${pkgdir} install
}

