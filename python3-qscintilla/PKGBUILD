
pkgname=python3-qscintilla
pkgver=2.9.2
pkgrel=1
license=('GPL')
arch=('x86_64')
url="http://www.riverbankcomputing.co.uk/software/qscintilla/intro"
pkgdesc="A port to Qt of Neil Hodgson's Scintilla C++ editor class, python3 bindings"
depends=('python2-qscintilla' 'pyqt-python3' )
makedepends=('chrpath')
source=("http://downloads.sourceforge.net/pyqt/QScintilla_gpl-${pkgver}.tar.gz")
md5sums=('db260651a5e086cc4eee6417172e27e8')

build() {
    cd QScintilla_gpl-${pkgver}/Python
    
    python3 configure.py --no-qsci-api
    make
}

package() {
    cd QScintilla_gpl-${pkgver}/Python
    
    make DESTDIR=${pkgdir} INSTALL_ROOT=${pkgdir} install
}
