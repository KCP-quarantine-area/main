
pkgname=tdb
pkgver=1.3.1
pkgrel=1
pkgdesc="Trivial Database similar to GDBM but allows simultaneous commits"
arch=('x86_64')
license=('GPL3')
url="http://tdb.samba.org/"
makedepends=('python2' 'libxslt' 'docbook-xsl')
optdepends=('python2: for python bindings')
source=("http://samba.org/ftp/${pkgname}/${pkgname}-${pkgver}.tar.gz"
        'tdb.h.patch')
md5sums=('f597190451d976fe013dfae9934fb9ad'
         'b5fc5a71d2109aa8d1d6317df3aad004')

build() {
   cd ${srcdir}/${pkgname}-${pkgver}
   patch -p1 -i ${srcdir}/tdb.h.patch 
   
   ./configure --prefix=/usr \
               --localstatedir=/var \
               --sysconfdir=/etc/samba
   make
}

package() {
   cd ${srcdir}/${pkgname}-${pkgver}
   
   make DESTDIR=$pkgdir/ install
}


