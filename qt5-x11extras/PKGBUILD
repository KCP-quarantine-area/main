
pkgname=qt5-x11extras
pkgver=5.7.0
subver=5.7.0
_pkgver=5.7
pkgrel=1
pkgdesc=('A cross-platform application and UI framework, Qt11extras')
arch=('x86_64')
url='http://qt.nokia.com/'
license=('GPL3' 'LGPL')
depends=('qt5-declarative')
groups=('qt5')
options=('!libtool')
_pkgfqn="qtx11extras-opensource-src-${subver}"
source=("https://download.qt-project.org/official_releases/qt/${_pkgver}/${pkgver}/submodules/$_pkgfqn.tar.xz")
#source=("https://download.qt-project.org/development_releases/qt/${_pkgver}/${subver}/submodules/$_pkgfqn.tar.xz")
md5sums=('8733599cf5a91c62b185f689b2d402ee')

build() {
    cd $srcdir/$_pkgfqn

    /usr/lib/qt5/bin/qmake
    make
}

package() {
    cd $srcdir/$_pkgfqn
    make INSTALL_ROOT=$pkgdir install
    
    install -D -m644 LGPL_EXCEPTION.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/LGPL_EXCEPTION.txt
}

