
pkgname=colord
pkgver=1.2.0
pkgrel=1
pkgdesc="System service easily manage, install and generate color profiles to manage input and output devices"
arch=('x86_64')
url="http://www.freedesktop.org/software/colord"
license=('GPL2')
depends=('lcms2' 'polkit' 'sqlite3' 'systemd' 'libgusb' 'dbus')
makedepends=('intltool' 'gobject-introspection' 'vala' 'docbook-xsl' 'sane' 'bash-completion')
opdepends=('sane')
replaces=('shared-color-profiles')
conflicts=('shared-color-profiles')
options=('!libtool')
install=colord.install
source=($url/releases/$pkgname-$pkgver.tar.xz)
md5sums=('740b321a32c6e54d28e6d043007947ea')

build() {
  cd "$pkgname-$pkgver"
  
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib/colord \
    --localstatedir=/var \
    --disable-static \
    --with-systemdsystemunitdir=/usr/lib/systemd/system \
    --with-daemon-user=colord \
    --enable-vala \
    --enable-sane
  make
}

package() {
  cd "$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" install
}

