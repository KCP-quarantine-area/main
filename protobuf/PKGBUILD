
pkgname=protobuf
pkgver=2.6.1
pkgrel=2
pkgdesc="A way of encoding structured data in an efficient yet extensible format."
arch=('x86_64')
url="https://github.com/google/protobuf/"
license=('APACHE')
depends=('gcc-libs' 'zlib')
makedepends=('python2' 'python2-setuptools')
options=('!libtool')
source=("https://github.com/google/protobuf/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.bz2")
md5sums=('11aaac2d704eef8efd1867a807865d85')

build() {
  cd ${pkgname}-${pkgver}
  
  ./autogen.sh 
  ./configure --prefix=/usr --disable-static 
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
