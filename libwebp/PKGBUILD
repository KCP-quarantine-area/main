
pkgname=libwebp
pkgver=0.5.0
pkgrel=1
pkgdesc="WebP library and conversion tools"
arch=('x86_64')
url="https://developers.google.com/speed/webp/"
license=('BSD')
depends=('libpng' 'libjpeg-turbo' 'libtiff' 'giflib')
makedepends=('freeglut' 'mesa' 'glu')
optdepends=('freeglut: vwebp viewer')
options=('!libtool')
source=("http://downloads.webmproject.org/releases/webp/$pkgname-$pkgver.tar.gz")
md5sums=('ba81eb9bf23e3c69a2f5cc8dcdb5938f')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr \
     --enable-swap-16bit-csp \
     --enable-experimental \
     --enable-libwebpmux \
     --enable-libwebpdemux \
     --enable-libwebpdecoder \
     --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
