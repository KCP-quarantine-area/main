
pkgname=libsignon-glib
pkgver=1.12
pkgrel=2
pkgdesc='Single signon authentication library for GLib applications'
arch=('x86_64')
url='https://gitlab.com/accounts-sso/libsignon-glib'
license=('LGPL2.1')
depends=('signonqt')
makedepends=('python2-gobject' 'gtk-doc')
source=("https://gitlab.com/accounts-sso/libsignon-glib/repository/archive.tar.gz?ref=${pkgver}")
md5sums=('e1b6d28984b1a2ac7072eec81f7df3df')

build() {
  cd ${pkgname}-${pkgver}-*
  
  ./autogen.sh \
    --prefix=/usr \
    --localstatedir=/var \
    --sysconfdir=/etc \
    --disable-static 
  make -j1
}

package() {
  cd ${pkgname}-${pkgver}-*

  make DESTDIR="${pkgdir}" install
}
