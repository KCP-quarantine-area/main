
pkgname=epson-inkjet-printer-escpr
pkgver=1.6.1
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifonction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/04/23/02/a5ee7e1622b0ba692bea6763d6d7f4810a8d0808/$pkgname-$pkgver-1lsb3.2.tar.gz")
md5sums=('dd1ea9f02b65989ddee151054ead089e')

build() {
  cd "$srcdir"
  tar xzvf "$pkgname-$pkgver-1lsb3.2.tar.gz"
  
  cd "$pkgname-$pkgver"
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --localstatedir=/var \
              --libexecdir=/usr/lib
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" install
}
