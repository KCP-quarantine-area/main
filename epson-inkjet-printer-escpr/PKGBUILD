
pkgname=epson-inkjet-printer-escpr
pkgver=1.6.2
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifonction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/04/31/70/da75c8bfb29869857a6369e614a28bd8beef12f1/$pkgname-$pkgver-1lsb3.2.tar.gz")
md5sums=('a8bba35972709f7cc59fe0eeabfe9fe2')

build() {
  cd "$srcdir"
  tar xzvf "$pkgname-$pkgver-1lsb3.2.tar.gz"
  
  cd "$pkgname-$pkgver"
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --localstatedir=/var \
              --libexecdir=/usr/lib
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" install
}
