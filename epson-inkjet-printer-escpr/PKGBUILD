
pkgname=epson-inkjet-printer-escpr
pkgver=1.6.4
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifonction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/04/37/97/88177bc0dc7025905eae4a0da1e841408f82e33c/$pkgname-$pkgver-1lsb3.2.tar.gz")
md5sums=('fa081d66af4fba92891a9fda5b0925fa')

build() {
  cd "$srcdir"
  tar xzvf "$pkgname-$pkgver-1lsb3.2.tar.gz"
  
  cd "$pkgname-$pkgver"
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --localstatedir=/var \
              --libexecdir=/usr/lib
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" install
}
