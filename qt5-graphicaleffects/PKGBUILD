
pkgname=qt5-graphicaleffects
pkgver=5.2.1
_pkgver=5.2
pkgrel=1
pkgdesc=('A cross-platform application and UI framework, QtGraphicaleffects files')
arch=('x86_64')
url='http://qt.nokia.com/'
license=('GPL3' 'LGPL')
depends=('qt5-declarative')
options=('!libtool')
groups=('qt5')
_pkgfqn="qtgraphicaleffects-opensource-src-${pkgver}"
source=("http://download.qt-project.org/official_releases/qt/${_pkgver}/${pkgver}/submodules/$_pkgfqn.tar.xz")
md5sums=('8dde8593750e33a79f49c5a2f03caf0c')

build() {
    cd $srcdir/$_pkgfqn

    /usr/lib/qt5/bin/qmake
    make
}

package() {
    cd $srcdir/$_pkgfqn
    make INSTALL_ROOT=$pkgdir install
    
    install -D -m644 LGPL_EXCEPTION.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/LGPL_EXCEPTION.txt
}

