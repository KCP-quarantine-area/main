
pkgname=qt5-graphicaleffects
pkgver=5.3.0RC
subver=5.3.0-RC
_pkgver=5.3
pkgrel=1
pkgdesc=('A cross-platform application and UI framework, QtGraphicaleffects files')
arch=('x86_64')
url='http://qt.nokia.com/'
license=('GPL3' 'LGPL')
depends=('qt5-declarative')
options=('!libtool')
groups=('qt5')
_pkgfqn="qtgraphicaleffects-opensource-src-${subver}"
source=("http://download.qt-project.org/development_releases/qt/${_pkgver}/5.3.0-rc/submodules/$_pkgfqn.tar.xz")
md5sums=('a1ce14d32a1895684b6c0d57c1cafbc7')

build() {
    cd $srcdir/$_pkgfqn

    /usr/lib/qt5/bin/qmake
    make
}

package() {
    cd $srcdir/$_pkgfqn
    make INSTALL_ROOT=$pkgdir install
    
    install -D -m644 LGPL_EXCEPTION.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/LGPL_EXCEPTION.txt
}

