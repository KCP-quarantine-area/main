
pkgname=libx86emu
pkgver=1.1
_minorver=21.5
pkgrel=5
pkgdesc="x86 emulation library"
arch=('x86_64')
url="http://www.opensuse.org"
license=('BSD')
depends=('glibc')
makedepends=('rpmextract')
options=('!emptydirs')
source=("http://download.opensuse.org/source/factory/repo/oss/suse/src/${pkgname}-${pkgver}-${_minorver}.src.rpm")
md5sums=('56efa841a7e5c035df9fa30b748ce82f')

build() {
  cd "${srcdir}"
  rpmextract.sh "${pkgname}-${pkgver}-${_minorver}.src.rpm"
  tar -xjf $pkgname-$pkgver.tar.bz2
  
  cd "${srcdir}/${pkgname}-${pkgver}"

  make LIBDIR=/usr/lib
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make LIBDIR=/usr/lib DESTDIR=$pkgdir install
  
  install -Dm644 LICENSE \
  ${pkgdir}/usr/share/licenses/$pkgname/LICENSE
}

