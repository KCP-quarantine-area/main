
pkgname=cfitsio
pkgver=3.360
pkgrel=1
pkgdesc="Library for reading and writing data files in FITS (Flexible Image Transport System) data format."
arch=('x86_64')
url="http://heasarc.gsfc.nasa.gov/docs/software/fitsio/fitsio.html"
license=('GPL2')
depends=('glibc')
makedepends=('pkgconfig')
options=('!libtool')
source=("ftp://heasarc.gsfc.nasa.gov/software/fitsio/c/${pkgname}${pkgver/./}.tar.gz")
md5sums=('833032c9ecbf1d460aca0360a26958db')

build() {
  cd "${srcdir}"/${pkgname}
  
  ./configure --prefix=/usr
  make shared
}

package() {
  cd "${srcdir}"/${pkgname}
  make DESTDIR="${pkgdir}" install
  
  install -D -m644 License.txt "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}
