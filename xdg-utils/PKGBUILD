
pkgname=xdg-utils
pkgver=1.1.0.3
_gitver=768ccceb8ffcfa77550ae9ecd6fea6838bfce706
pkgrel=1
pkgdesc='Command line tools that assist applications with a variety of desktop integration tasks.'
arch=('x86_64')
url='http://portland.freedesktop.org/'
depends=('sh')
makedepends=('docbook-xsl' 'links' 'xmlto')
license=('MIT')
source=("http://cgit.freedesktop.org/xdg/xdg-utils/snapshot/xdg-utils-${_gitver}.tar.gz")
md5sums=('062d432ef5dcc437634f185e6532c2e0')

build() {
	cd ${srcdir}/${pkgname}-${_gitver}
	
	./configure --prefix=/usr --mandir=/usr/share/man
	make scripts-clean -C scripts 
	make man scripts -C scripts 
}

package() {
	cd ${srcdir}/${pkgname}-${_gitver}
	
	make DESTDIR="${pkgdir}" install
	install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

