
pkgname=libmng
pkgver=2.0.2
pkgrel=1
pkgdesc="A collection of routines used to create and manipulate MNG format graphics files"
arch=('x86_64')
url="http://www.libmng.com/"
license=('custom')
depends=('zlib' 'libjpeg-turbo' 'lcms2')
options=('!libtool')
source=("http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.xz"
        'stdio.patch')
md5sums=('3804bf2523af9b4e0670b5982b3bf984'
         '422d04f52de9c92b7b44212bb1b989d1')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p5 -i "${srcdir}/stdio.patch"
  #sed -i 's/AM_C_PROTOTYPES//' makefiles/configure.in
  #ln -s makefiles/configure.in .
  #ln -s makefiles/Makefile.am .
  
  autoreconf --force --install
  ./configure --prefix=/usr --with-lcms2
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  make DESTDIR="${pkgdir}" install
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
