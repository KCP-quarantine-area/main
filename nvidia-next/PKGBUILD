
_extramodules=extramodules-3.13-rc7-next
_kver=$(cat /lib/modules/${_extramodules}/version)

pkgname=nvidia-next
pkgver=319.82
pkgrel=1
epoch=1
pkgdesc="NVIDIA drivers for linux."
arch=('x86_64')
url="http://www.nvidia.com/"
depends=('linux-next>=3.13rc5' 'linux-next<3.13' "nvidia-utils=1:${pkgver}")
makedepends=('linux-next-headers')
license=('custom')
install=nvidia-next.install
options=('!strip')
#_pkg="NVIDIA-Linux-x86_64-${pkgver}-no-compat32"
_pkg="NVIDIA-Linux-x86_64-${pkgver}"
source=("ftp://download.nvidia.com/XFree86/Linux-x86_64/${pkgver}/${_pkg}.run"
        'acpi_os_wait_events_complete.patch')
md5sums=('f179094da7fb807ec38c70f2b54607a5'
         '7e146069c9f09295581201d987a55efd')

build() {
  cd "${srcdir}"
  sh "${_pkg}.run" --extract-only
  
  cd "${_pkg}"
  patch -p1 -i ${srcdir}/acpi_os_wait_events_complete.patch
  
  cd "${srcdir}/${_pkg}/kernel"
  make SYSSRC=/lib/modules/3.13.0-1-next/build module
}

package() {
  install -D -m644 "${srcdir}/${_pkg}/kernel/nvidia.ko" "${pkgdir}/lib/modules/${_extramodules}/nvidia.ko"
  install -d -m755 "${pkgdir}/lib/modprobe.d"
  
  echo "blacklist nouveau" >> "${pkgdir}/lib/modprobe.d/nvidia.conf"
  sed -i -e "s/EXTRAMODULES='.*'/EXTRAMODULES='${_extramodules}'/" "${startdir}/nvidia-next.install"
  gzip "${pkgdir}/lib/modules/${_extramodules}/nvidia.ko"
}
