
_extramodules=extramodules-3.11-next
_kver=$(cat /lib/modules/${_extramodules}/version)

pkgname=nvidia-next
pkgdesc="NVIDIA drivers for linux."
pkgver=325.15
pkgrel=5
arch=('x86_64')
url="http://www.nvidia.com/"
depends=('linux-next>=3.11' 'linux-next<3.12' "nvidia-utils=${pkgver}")
makedepends=('linux-next-headers')
license=('custom')
install=nvidia-next.install
source=("https://github.com/KaOSx/hardware-detection/raw/master/hwdb/nvidia_supported"
        'linux3.11.patch')
md5sums=('62d0cdb856cfae64753c0f3acf729d47'
         '6615840da025708edefb44a98c68f6f7')

    _ARCH='x86_64'
    _pkg="NVIDIA-Linux-${_ARCH}-${pkgver}-no-compat32"
    source+=("ftp://download.nvidia.com/XFree86/Linux-${_ARCH}/${pkgver}/${_pkg}.run")
    md5sums+=('63b2caa0cb128efa1a7808d7bddb2074')

build() {
    cd "${srcdir}"
    sh "${_pkg}.run" --extract-only

    cd "${_pkg}/kernel"
    patch -p2 -i ${srcdir}/linux3.11.patch
    
    make SYSSRC=/lib/modules/"${_kver}/build" module
}

package() {
    
    install -D -m644 "${srcdir}/${_pkg}/kernel/nvidia.ko" \
        "${pkgdir}/lib/modules/${_extramodules}/nvidia.ko"
    install -d -m755 "${pkgdir}/etc/modprobe.d"
    sed -i -e "s/EXTRAMODULES='.*'/EXTRAMODULES='${_extramodules}'/" "${startdir}/nvidia-next.install"
    gzip "${pkgdir}/lib/modules/${_extramodules}/nvidia.ko"
}

