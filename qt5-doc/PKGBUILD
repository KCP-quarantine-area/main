
pkgname=qt5-doc
pkgver=5.2.1
_pkgver=5.2
pkgrel=1
pkgdesc=('A cross-platform application and UI framework, offline documentation files')
arch=('x86_64')
url='http://qt.nokia.com/'
license=('GPL3' 'LGPL')
depends=('qt5-tools')
options=('!libtool')
_pkgfqn="qtdoc-opensource-src-${pkgver}"
source=("http://download.qt-project.org/official_releases/qt/${_pkgver}/${pkgver}/submodules/$_pkgfqn.tar.xz")
md5sums=('1bad40cdc0fa7cebea2b2ae13b645acd')

build() {
    cd $srcdir/$_pkgfqn
 
    /usr/lib/qt5/bin/qmake
    make docs
}

package() {
    cd $srcdir/$_pkgfqn
    
    make INSTALL_ROOT=$pkgdir install_docs
}

