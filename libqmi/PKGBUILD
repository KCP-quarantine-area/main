
pkgname=libqmi
pkgver=1.6.0
pkgrel=1
pkgdesc="QMI modem protocol helper library"
arch=('x86_64')
url="http://cgit.freedesktop.org/libqmi"
license=('GPL2')
depends=('glib2' 'bash')
makedepends=('python2')
options=('!libtool')
source=("http://www.freedesktop.org/software/$pkgname/$pkgname-$pkgver.tar.xz")
md5sums=('17d6c2b404ee1eb4d1e60050fef64491')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static
  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}
