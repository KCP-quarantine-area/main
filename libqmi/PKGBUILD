
pkgname=libqmi
pkgver=1.8.0
pkgrel=1
pkgdesc="QMI modem protocol helper library"
arch=('x86_64')
url="http://cgit.freedesktop.org/libqmi"
license=('GPL2')
depends=('glib2' 'bash')
makedepends=('python2' 'help2man')
options=('!libtool')
source=("http://www.freedesktop.org/software/$pkgname/$pkgname-$pkgver.tar.xz")
md5sums=('1c4c64c0894f691632727363abec32b8')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static 
  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}
