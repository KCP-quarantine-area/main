
pkgname=libqmi
pkgver=1.10.2
pkgrel=1
pkgdesc="QMI modem protocol helper library"
arch=('x86_64')
url="http://cgit.freedesktop.org/libqmi"
license=('GPL2')
depends=('glib2' 'bash')
makedepends=('python2' 'help2man')
options=('!libtool')
source=("http://www.freedesktop.org/software/libqmi/$pkgname-$pkgver.tar.xz")
md5sums=('b5b3aa098ac33c246f4a8122b7d04d05')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --libexecdir=/usr/lib
  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}
