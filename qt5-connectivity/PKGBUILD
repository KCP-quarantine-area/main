
pkgname=qt5-connectivity
pkgver=5.3.2
subver=5.3.2
_pkgver=5.3
pkgrel=1
pkgdesc=('A cross-platform application and UI framework, QtBluetooth, QtNfc files')
arch=('x86_64')
url='http://qt.nokia.com/'
license=('GPL3' 'LGPL')
depends=('qt5-declarative')
makedepends=('python2')
groups=('qt5')
options=('!libtool')
_pkgfqn="qtconnectivity-opensource-src-${subver}"
source=("http://download.qt-project.org/official_releases/qt/${_pkgver}/${pkgver}/submodules/$_pkgfqn.tar.xz")
md5sums=('e496963407bb0c7b2e6c07133715a9cf')

build() {
    cd $srcdir/$_pkgfqn

    /usr/lib/qt5/bin/qmake
    make
}

package() {
    cd $srcdir/$_pkgfqn
    make INSTALL_ROOT=$pkgdir install
    
    mkdir -p ${pkgdir}/usr/bin
    for i in $(ls ${pkgdir}/usr/lib/qt5/bin); do
        ln -s /usr/lib/qt5/bin/${i} ${pkgdir}/usr/bin/${i}-qt5
    done
}

