
pkgname=python2-setuptools
pkgver=22.0.0
pkgrel=1
pkgdesc="Easily download, build, install, upgrade, and uninstall Python packages"
arch=('x86_64')
license=('PSF')
url="http://pypi.python.org/pypi/setuptools"
depends=('python2')
makedepends=('asciidoc')
provides=('python2-distribute' 'setuptools')
replaces=('python2-distribute' 'setuptools')
conflicts=('python2-distribute')
source=("https://pypi.python.org/packages/f5/90/010892bde11d2da00548285da29a055e6b0e3b81592bb6021571b87f34a1/setuptools-${pkgver}.tar.gz")
md5sums=('ddd9fbe3da4ac564830d75fadf796930')

build() {
   cd setuptools-${pkgver}
   
   python2 setup.py build
}
 
check() {
   cd setuptools-${pkgver}
   # test fail in chroot LC_CTYPE=en_US.utf8 fixes tests on installed system
   #python2 setup.py test
}
 
package() {
   cd setuptools-${pkgver}
   
   python2 setup.py install --prefix=/usr --root="${pkgdir}" --optimize=1 --skip-build
}
 

