
pkgname=sshfs
pkgver=2.7
_pkgver=2_7
pkgrel=1
pkgdesc="FUSE client based on the SSH File Transfer Protocol"
arch=('x86_64')
url="https://github.com/libfuse/"
license=('GPL')
depends=('fuse' 'glib2' 'openssh')
makedepends=('pkgconfig')
source=("https://github.com/libfuse/sshfs/releases/download/sshfs-2.7/sshfs-${pkgver}.tar.gz")
md5sums=('6f8e4b812348a3d752897417e38135fe')

build() {
  cd ${pkgname}-${pkgver}

  #autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR="${pkgdir}" install
}
