
pkgname=dosfstools
pkgver=3.0.17
pkgrel=1
pkgdesc="DOS filesystem utilities."
arch=('x86_64')
url="http://www.daniel-baumann.ch/software/dosfstools/"
license=('GPL2')
depends=('glibc')
source=("http://www.daniel-baumann.ch/files/software/dosfstools/${pkgname}-${pkgver}.tar.xz")
md5sums=('468b953ddc8baf66e9881d1a5eae03e2')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  make PREFIX="${pkgdir}" MANDIR="${pkgdir}/usr/share/man" DOCDIR="${pkgdir}/usr/share/doc" install
}

