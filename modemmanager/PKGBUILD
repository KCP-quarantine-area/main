
pkgname=modemmanager
_realname=ModemManager
pkgver=0.7.990
pkgrel=1
pkgdesc="Mobile broadband modem management service"
arch=('x86_64')
url="http://cgit.freedesktop.org/ModemManager/ModemManager/"
license=('GPL2')
depends=('dbus-glib' 'systemd' 'ppp' 'polkit' 'hicolor-icon-theme' 'libqmi')
makedepends=('intltool' 'git' 'gtk-doc')
optdepends=('usb_modeswitch: install if your modem shows up as a storage drive')
options=('!libtool')
#source=("http://download.gnome.org/sources/${_realname}/0.6/${_realname}-${pkgver}.tar.xz")
source=("git://anongit.freedesktop.org/$_realname/$_realname#commit=135bec6")
md5sums=('SKIP')

build() {
  cd "$srcdir/${_realname}"
  
   ./autogen.sh --prefix=/usr \
   	--sysconfdir=/etc \
	--localstatedir=/var \
	--with-udev-base-dir=/usr/lib/udev \
	--disable-static \
	--with-polkit
  make
}

package() {
  cd "$srcdir/${_realname}"
  
  make DESTDIR="$pkgdir" install
}
