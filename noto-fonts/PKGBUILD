
pkgname=noto-fonts
pkgver=20150929
_pkgver=2015-09-29
pkgrel=1
pkgdesc="Google developed font family which aims to support all languages with a harmonious look and feel. "
arch=('x86_64')
license=('apache')
url="https://www.google.com/get/noto/"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=$pkgname.install
source=("https://github.com/googlei18n/noto-fonts/archive/v${_pkgver}-license-adobe.tar.gz")
md5sums=('fc043c92857265622f1f6562a71a81fe')

package() {
  cd "${srcdir}/${pkgname}-${_pkgver}-license-adobe"
  
  install -d "${pkgdir}/usr/share/fonts/TTF/noto"
  install -m0644 hinted/*.ttf "${pkgdir}/usr/share/fonts/TTF/noto/"
}
