
pkgname=qt5-serialport
pkgver=5.4.0beta
subver=5.4.0-alpha
_pkgver=5.4
pkgrel=1
pkgdesc=('A cross-platform application and UI framework, QtSerialport files')
arch=('x86_64')
url='http://qt.nokia.com/'
license=('GPL3' 'LGPL')
depends=('qt5-declarative')
groups=('qt5')
options=('!libtool')
_pkgfqn="qtserialport-opensource-src-${subver}"
#source=("http://download.qt-project.org/official_releases/qt/${_pkgver}/${pkgver}/submodules/$_pkgfqn.tar.xz")
source=("http://download.qt-project.org/development_releases/qt/${_pkgver}/${subver}/submodules/$_pkgfqn.tar.xz")
md5sums=('8edd4c7c08d6d662a2cbc867b3e1792a')

build() {
    cd $srcdir/$_pkgfqn

    /usr/lib/qt5/bin/qmake
    make
}

package() {
    cd $srcdir/$_pkgfqn
    make INSTALL_ROOT=$pkgdir install
    
    mkdir -p ${pkgdir}/usr/bin
    for i in $(ls ${pkgdir}/usr/lib/qt5/bin); do
        ln -s /usr/lib/qt5/bin/${i} ${pkgdir}/usr/bin/${i}-qt5
    done
    
    install -D -m644 LGPL_EXCEPTION.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/LGPL_EXCEPTION.txt
}

