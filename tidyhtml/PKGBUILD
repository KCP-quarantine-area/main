
pkgname=tidyhtml
_pkgname=tidy-html5
pkgver=5.0.0
pkgrel=1
pkgdesc="A tool to tidy down your HTML code to a clean style"
arch=('x86_64')
url="eea9f515609ff534cf35cfe930b39fd9"
license=('custom')
depends=('glibc')
makedepends=('cmake' 'git')
options=('!libtool')
source=("https://github.com/htacg/${_pkgname}/archive/${pkgver}.tar.gz")
md5sums=('b0e95bda662a06e7652c8475cf8e9b1a')

build() {
  mkdir -p build
  cd build
  
  cmake ../${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr 
  make 
}

package() {
  cd build
  make DESTDIR=$pkgdir install
  
  install -Dm644 $srcdir/${_pkgname}-${pkgver}/LICENSE.md ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.md
}
