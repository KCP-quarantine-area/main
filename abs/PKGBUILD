
pkgname=abs
pkgver=2.4.4
pkgrel=3
pkgdesc="Utilities to download and work with the Arch Build System (ABS)"
arch=('x86_64')
url="http://projects.archlinux.org/abs.git/"
license=('GPL')
depends=('bash' 'rsync')
backup=(etc/abs.conf)
source=("https://sources.archlinux.org/other/abs/${pkgname}-${pkgver}.tar.gz")
md5sums=('7258c739a93e02a4f31f114e9fc3b0ba')

build() {
  cd ${pkgname}-${pkgver}

  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -dm755 ${pkgdir}/var/abs/local/
  install -Dm644 README ${pkgdir}/var/abs/README
  
  sed -i '/ARCH=/s|i686|x86_64|' ${pkgdir}/etc/abs.conf
}

